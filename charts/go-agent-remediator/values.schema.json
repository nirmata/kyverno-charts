{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "llm": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["bedrock", "azure-openai", "nirmataAI"]
        },
        "bedrock": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "model": { "type": "string" },
            "region": { "type": "string" },
            "secretRef": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "name": { "type": "string" },
                "key": { "type": "string" }
              }
            }
          }
        },
        "azureOpenAI": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "endpoint": { "type": "string" },
            "deploymentName": { "type": "string" },
            "secretRef": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "name": { "type": "string" },
                "key": { "type": "string" }
              }
            }
          }
        },
        "nirmataAI": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "model": { "type": "string" }
          }
        }
      }
    },
    "nirmata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "endpoint": { "type": "string" },
        "serviceAccountTokenSecret": { "type": "string" },
        "serviceAccountTokenSecretNamespace": { "type": "string" },
        "serviceAccountTokenSecretKey": { "type": "string" },
        "apiTokenSecret": { "type": "string" },
        "apiTokenSecretNamespace": { "type": "string" },
        "apiTokenSecretKey": { "type": "string" }
      },
      "oneOf": [
        {
          "properties": {
            "serviceAccountTokenSecret": { 
              "type": "string",
              "minLength": 1 
            },
            "apiTokenSecret": {
              "type": "string",
              "maxLength": 0
            }
          },
          "required": ["serviceAccountTokenSecret"]
        },
        {
          "properties": {
            "apiTokenSecret": { 
              "type": "string",
              "minLength": 1 
            },
            "serviceAccountTokenSecret": {
              "type": "string",
              "maxLength": 0
            }
          },
          "required": ["apiTokenSecret"]
        }
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "llm": {
            "type": "object",
            "properties": {
              "provider": { "const": "bedrock" }
            },
            "required": ["provider"]
          }
        },
        "required": ["llm"]
      },
      "then": {
        "properties": {
          "llm": {
            "required": ["bedrock"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "llm": {
            "type": "object",
            "properties": {
              "provider": { "const": "azure-openai" }
            },
            "required": ["provider"]
          }
        },
        "required": ["llm"]
      },
      "then": {
        "properties": {
          "llm": {
            "required": ["azureOpenAI"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "llm": {
            "type": "object",
            "properties": {
              "provider": { "const": "nirmataAI" }
            },
            "required": ["provider"]
          }
        },
        "required": ["llm"]
      },
      "then": {
        "properties": {
          "llm": {
            "required": ["nirmataAI"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "llm": {
            "type": "object",
            "properties": {
              "provider": { "const": "nirmataAI" }
            },
            "required": ["provider"]
          }
        },
        "required": ["llm"]
      },
      "then": {
        "properties": { 
          "nirmata": { 
            "description": "Nirmata configuration for command-line flags. These values are used to set flags (--service-account-token-secret or --api-token-secret, --url) and are not part of LLMConfig. Exactly one credential type (serviceAccountTokenSecret or apiTokenSecret) must be configured."
          } 
        }
      }
    }
  ]
}


